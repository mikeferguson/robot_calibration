<library path="robot_calibration_feature_finders">

  <class type="robot_calibration::CheckerboardFinder"
         base_class_type="robot_calibration::FeatureFinder">
    <description>Feature finder that detect checkerboards.</description>
  </class>

  <class type="robot_calibration::LedFinder"
         base_class_type="robot_calibration::FeatureFinder">
    <description>Feature finder that detect LED patterns (fairly Fetch-specific).</description>
  </class>

  <class type="robot_calibration::PlaneFinder"
         base_class_type="robot_calibration::FeatureFinder">
    <description>Feature finder that detects points corresponding to planes.</description>
  </class>

  <class type="robot_calibration::RobotFinder"
         base_class_type="robot_calibration::FeatureFinder">
    <description>Feature finder that detects points corresponding to the ground plane and the robot.</description>
  </class>

  <class type="robot_calibration::ScanFinder"
         base_class_type="robot_calibration::FeatureFinder">
    <description>Feature finder that detects points from a laser scan.</description>
  </class>

</library>
